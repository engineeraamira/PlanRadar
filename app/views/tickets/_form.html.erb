    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div><br>

  <div>
    <%= form.label :due_date, style: "display: block" %>
    <%= form.date_field :due_date, value: (Date.current if @ticket.new_record?), min: (Date.current if @ticket.new_record?) %>
